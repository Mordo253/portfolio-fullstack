{
  "name": "portfolio",
  "version": "1.0.0",
  "private": true,
  "description": "Portfolio Full Stack con Next.js, SASS y Express.js",
  "author": "Tu Nombre <tu-email@gmail.com>",
  "license": "MIT",
  "keywords": ["portfolio", "fullstack", "nextjs", "sass", "express"],
  
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build", 
    "build:backend": "cd backend && npm run build",
    
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules"
  },
  
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}